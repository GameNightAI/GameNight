{
  "expo": {
    "name": "GameNyte",
    "slug": "gamenyte",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "gamenyte",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.gamenyte.app",
      "buildNumber": "1",
      "infoPlist": {
        "CFBundleURLTypes": [
          {
            "CFBundleURLName": "gamenyte",
            "CFBundleURLSchemes": [
              "gamenyte"
            ]
          }
        ],
        "NSCameraUsageDescription": "GameNyte needs camera access to take photos of your board game collection for AI analysis.",
        "NSPhotoLibraryUsageDescription": "GameNyte needs photo library access to select existing photos of your board game collection."
      }
    },
    "android": {
      "package": "com.gamenyte.app",
      "versionCode": 1,
      "intentFilters": [
        {
          "action": "VIEW",
          "data": [
            {
              "scheme": "gamenyte"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        }
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "single",
      "favicon": "./assets/images/favicon.png"
    },
    "platforms": [
      "ios",
      "android",
      "web"
    ],
    "plugins": [
      "expo-router"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}